{
    "name": "aeon-php/calendar-holidays",
    "type": "library",
    "description": "Holidays calendar abstraction layer for Aeon Time management framework",
    "keywords": [
        "calendar",
        "immutable",
        "holidays"
    ],
    "prefer-stable": true,
    "minimum-stability": "dev",
    "require": {
        "php": "^7.4.2 || ^8.0 || ^8.1",
        "ext-json": "*",
        "ext-mbstring": "*",
        "aeon-php/calendar": ">=0.14.0"
    },
    "require-dev": {
        "flow-php/etl": "1.x@dev",
        "flow-php/etl-adapter-json": "1.x@dev",
        "flow-php/etl-adapter-memory": "1.x@dev",
        "flow-php/etl-transformer": "1.x@dev",
        "google/apiclient": "^2.0",
        "halaxa/json-machine": "^0.6.1"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Aeon\\": [
                "src/Aeon"
            ]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Aeon\\Calendar\\Tests\\": "tests/Aeon/Calendar/Tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "build": [
            "@static:analyze",
            "@test",
            "@test:mutation"
        ],
        "test": [
            "tools/vendor/bin/phpunit"
        ],
        "test:mutation": [
            "tools/vendor/bin/infection --threads=2"
        ],
        "static:analyze": [
            "tools/vendor/bin/psalm --output-format=compact",
            "tools/vendor/bin/phpstan analyze -c phpstan.neon",
            "tools/vendor/bin/php-cs-fixer fix --dry-run"
        ],
        "cs:php:fix": "tools/vendor/bin/php-cs-fixer fix",
        "tools:install": "composer install --working-dir=./tools",
        "post-install-cmd": [
            "@tools:install"
        ],
        "post-update-cmd": [
            "@tools:install"
        ]
    }
}
